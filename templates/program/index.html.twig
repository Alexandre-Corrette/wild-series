{% extends 'base.html.twig' %}

{% block title %}Hello | {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto;max-width: 240px; }
    .example-wrapper code { background: blue; padding: 2px 6px; }
    
</style>
<div class="container">
    <div class="wrapper">      
        {% for program in programs %}
            <div class="card">
                <h2> {{ program.title }} </h2>
                    <h3> Catégorie : {{ program.category.name }} </h3>
                        <img class="poster md" src="{{ program.poster }}">
                        <p>{{ program.summary }}</p>
                        {# Lien vers la fiche de la série : #}
                        <a href="{{ path("program_show", { "id": program.id }) }}"><p>Voir la fiche</p></a>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>
</div>
{% endblock %}
